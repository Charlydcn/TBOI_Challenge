{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/login.css')}}">
{% endblock %}

{% block body %}


<form action="{{ path('oauth_discord')}}" method="POST">
    <input type="hidden" name="token" value="{{ csrf_token('discord-auth') }}"/>
    <button type="submit">
        <i class="fa-brands fa-discord"></i>
        Sign in with Discord
    </button>
</form>

<form method="post">

    <div class="error">
        <p>{{ error ? error.message : "" }}</p>
    </div>

    <h1>Sign in : </h1>
    <label for="inputEmail">Email : </label>
    <input type="email" value="{{ last_username }}" placeholder="edmund@example.com" name="email" id="inputEmail" autocomplete="email" required autofocus>
    <label for="inputPassword">Password :</label>
    <input type="password" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;" name="password" id="inputPassword" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button type="submit">
        Sign in
    </button>
    <p>Not registered ?<a href="{{path('app_register')}}">Register</a></p>
</form>
{% endblock %}
